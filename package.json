{
  "name": "ereuna",
  "private": true,
  "version": "2025.250",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "nodemon --exec \"node --import 'data:text/javascript,import { register } from \\\"node:module\\\"; import { pathToFileURL } from \\\"node:url\\\"; register(\\\"ts-node/esm\\\", pathToFileURL(\\\"./\\\"));'\" api/server.ts",
    "dbstart": "brew services start mongodb-community@7.0",
    "dbstop": "brew services stop mongodb-community@7.0",
    "redisstart": "brew services start redis",
    "redisstop": "brew services stop redis",
    "redis": "redis-server",
    "docker:dev": "docker compose -f docker/docker-compose.dev.yml up --build -d",
    "docker:prod": "docker compose -f docker/docker-compose.prod.yml up --build -d",
    "dockerstop": "docker compose -f docker/docker-compose.dev.yml down --remove-orphans --rmi all && docker system prune -f",
    "dockerstop:prod": "docker compose -f docker/docker-compose.prod.yml down",
    "dbup": "mongodump --db=EreunaDB --out=db/dump",
    "websocket": "uvicorn server.websocket.websocket:app --host 0.0.0.0 --port 8000",
    "ingestor": "uvicorn server.ingestor.ingestor:app --host 0.0.0.0 --port 8001",
    "aggregator": "uvicorn server.aggregator.app:app --host 0.0.0.0 --port 8002",
    "mobile:sync": "npm run build && cap sync",
    "mobile:ios": "cap open ios",
    "mobile:android": "cap open android",
    "mobile:run:ios": "cap run ios",
    "mobile:run:android": "cap run android"
  },

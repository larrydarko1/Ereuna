{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "outDir": "./dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "api/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}